<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainpersegiActivity"
    android:background="#FFD180"
    android:padding="10dp"
    >
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="masukkan sisi"
        android:textColorHint="#FF6D00"
        android:id="@+id/editTextp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hitung"
        android:layout_below="@id/editTextp"
        android:id="@+id/btnhitungp"
        android:textColor="#FF6D00"
        android:background="#FFAB00"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnhitungp"
        android:text="hasilnya"
        android:id="@+id/hasilnyap"
        android:textColor="#FF6D00"
        />



</RelativeLayout>